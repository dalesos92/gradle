// Tarea para calcular el área del círculo
task circle {
    doLast {
        if (project.hasProperty('radius')) {
            double r = Double.parseDouble(radius)
            // Usar Math.PI (forma fraccionaria de pi)
            double area = Math.PI * r * r
            println "Area of circle: " + area
        } else {
            println "Please provide radius using -Pradius=<value>"
        }
    }
}

// Tarea para calcular el área del cuadrado
task square {
    doLast {
        if (project.hasProperty('side')) {
            double s = Double.parseDouble(side)
            double area = s * s
            println "Area of square: " + area
        } else {
            println "Please provide side using -Pside=<value>"
        }
    }
}
