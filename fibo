// Definición de la función Fibonacci
def fib(n) {
    int first_num = 0
    int second_num = 1
    
    if (n >= 1) {
        print first_num
    }
    if (n >= 2) {
        print " " + second_num
    }
    
    int i = 3
    while (i <= n) {
        int next_num = first_num + second_num
        print " " + next_num
        first_num = second_num
        second_num = next_num
        i = i + 1
    }
    println "" // Salto de línea final para limpieza
}

// Definición de la tarea fibo
task fibo {
    doLast {
        // Verifica si la propiedad 'num' existe antes de usarla
        if (project.hasProperty('num')) {
            int n = Integer.parseInt(num)
            fib(n)
        } else {
            println "Please provide the number using -Pnum=<value>"
        }
    }
}
